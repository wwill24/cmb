        </com.coffeemeetsbagel.cmb_views.CmbLinearLayout>
    </com.coffeemeetsbagel.cmb_views.CmbLinearLayout>
    <View android:background="@color/divider_color" android:layout_width="match_parent" android:layout_height="@dimen/height_separator" android:layout_marginTop="@dimen/margin_med"/>
</com.coffeemeetsbagel.cmb_views.CmbLinearLayout>
