<?xml version="1.0" encoding="utf-8"?>
<com.coffeemeetsbagel.cmb_views.CmbLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/spacer_2">
    <com.coffeemeetsbagel.cmb_views.CmbLinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.coffeemeetsbagel.cmb_views.CmbLinearLayout android:gravity="center_horizontal" android:layout_gravity="top" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.coffeemeetsbagel.cmb_views.CmbImageView android:id="@+id/item_image" android:background="@drawable/wallet_item_circle" android:layout_width="@dimen/photo_size_large" android:layout_height="@dimen/photo_size_large" android:contentDescription="@null"/>
