            <ImageView android:id="@+id/imageView_dot0" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/dot_white"/>
            <ImageView android:id="@+id/imageView_dot1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/dot_white" android:alpha="@dimen/loading_bubble_opacity" android:layout_marginStart="@dimen/spacer_1"/>
            <ImageView android:id="@+id/imageView_dot2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/dot_white" android:alpha="@dimen/loading_bubble_opacity" android:layout_marginStart="@dimen/spacer_1"/>
            <ImageView android:id="@+id/imageView_dot3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/dot_white" android:alpha="@dimen/loading_bubble_opacity" android:layout_marginStart="@dimen/spacer_1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
