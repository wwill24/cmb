<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_selector_radius"/>
            <solid android:color="@color/gray_lightest_of_them_all"/>
            <size android:height="@dimen/button_selector_size" android:width="@dimen/button_selector_size"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_selector_radius"/>
            <solid android:color="@color/white"/>
            <size android:height="@dimen/button_selector_size" android:width="@dimen/button_selector_size"/>
        </shape>
    </item>
</selector>
